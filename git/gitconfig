[url "git@github.com:"]
        insteadOf = https://github.com/
[core]
	editor = vim
	excludesfile = /home/ifont/.gitignore_global
[merge]
	tool = vimdiff
[push]
	default = tracking
[alias]
	br = branch -vv
	ci = commit -v
	co = checkout
	last = log -1 HEAD
    ls = ls-files
	oldest-ancestor = !bash -c 'diff --old-line-format= --new-line-format= <(git rev-list --first-parent \"${1:-master}\") <(git rev-list --first-parent \"${2:-HEAD}\") | head -1' -
	st = status
	unstage = reset HEAD --
[color]
	ui = auto
[pull]
	rebase = true
[stash]
	showPatch = true
[commit]
	verbose = true
