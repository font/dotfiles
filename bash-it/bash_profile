# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs

# Updates PATH for the Google Cloud SDK.
if [ -f /home/${USER}/google-cloud-sdk/path.bash.inc ]; then
  source "/home/${USER}/google-cloud-sdk/path.bash.inc"
fi

# Updates PATH for MS Azure
PATH=${PATH}:/home/ifont/azure-cli/bin

# Update paths for Go
PATH=/usr/local/go/bin:/home/ifont/go/bin:${PATH}
if which go &> /dev/null; then
    export GOPATH=$(go env GOPATH)
fi

# Update PATH for etcd
PATH=${PATH}:/home/ifont/go/src/k8s.io/kubernetes/third_party/etcd

# Adds home bin to PATH and export
export PATH=${HOME}/bin:${PATH}
